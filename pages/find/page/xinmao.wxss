/* 鑫茂新顾问云样式 */
.xinmao-news{
  background: #f7f7f7;
  padding: 30rpx 0 90rpx 0;
}
.xinmao-news .title,
.xinmao-news .date{
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.article .msg-XM{
  width: 100%;
  font-family: "Source Sans Pro", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}
.msg-XM .msg-banner{
  position: relative;
  width: 100%;
  height: 480rpx;
}
.msg-XM .msg-banner .banner-img-box{
  width: 100%;
  height: 340rpx;
}
.msg-XM .msg-banner .banner-img-box .banner-img{
  width: 100%;
  height: 100%;
}
.msg-XM .msg-banner .banner-content{
  position: absolute;
  border-radius:8rpx;
  width: 690rpx;
  height: 316rpx;
  padding: 44rpx 26rpx 110rpx 48rpx;
  background: url("//xm-file.oss-cn-beijing.aliyuncs.com/2019active13/morningPaperTopBg.png") no-repeat;
  background-size: contain;
  display: -webkit-flex;
  align-items: center;
  box-sizing: border-box;
  left: 30rpx;
  bottom: -14rpx;
}
.msg-XM .msg-banner .banner-content .doct{
  width: 18rpx;
  height: 18rpx;
  top: 15rpx;
  left: 15rpx;
  background: url('//xm-file.oss-cn-beijing.aliyuncs.com/2019active13/top-circle.png');
  background-size: cover;
  background-repeat: no-repeat;
  position: absolute;
}
.msg-XM .msg-banner .banner-content .content-lf{
  width: auto;
  height: 100%;
  padding-right: 50rpx;
  color:#444444;
  display:table-cell;
  vertical-align:middle;
  text-align:center;
  box-sizing:border-box;
  border-right: 1rpx solid #000;
}
.msg-XM .msg-banner .banner-content .content-rt{
  padding-left: 50rpx;
  font-size: 12rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #000000;
}
.banner-content .content-lf .month-line{
  font-size: 24rpx;
  width: 100%;
}
.banner-content .content-lf .day-line{
  width: 100%;
  padding-top: 4rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  margin-bottom: 30rpx;
  height: 42rpx;
}
.banner-content .content-lf .day-line .day-font{
  font-size:60rpx;
  display: inline;
}
.banner-content .content-lf .week-line{
  min-width:132rpx;
  width:100%;
  padding-top:10px;
  margin:0px auto;
  box-sizing:border-box;
  font-size: 24rpx;
}
.banner-content .content-rt .rt-title{
  height: 26rpx;
  line-height: 26rpx;
  font-size:28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  box-sizing: border-box;
  margin-bottom: 32rpx;
}
.banner-content .content-rt .rt-title .double-quotes-icon{
  display: inline-block;
  width: 24rpx;
  height: 26rpx;
  margin-right: 14rpx;
  background: url(//xm-file.oss-cn-beijing.aliyuncs.com/2019active13/card-title-img.png);
  background-size: cover;
  background-repeat: no-repeat
}
.banner-content .content-rt .rt-content{
  text-align:justify;
  font-size:24rpx;
  box-sizing:border-box;
  line-height: 32rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.panel_list{
  width: 100%;
  padding:0 30rpx 20rpx 30rpx;
  box-sizing: border-box;
}
.panel_list .top_name_div{
  width: 100%;
  padding: 40rpx 0 30rpx 0;
}
.panel_list .top_name_div .top_name_con{
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
}
.panel_list .top_name_div .top_name_con .top_name_icon{
  width: 6rpx;
  height: 32rpx;
  background: #007AFF;
}
.panel_list .top_name_div .top_name_con .top_name_about{
  font-size: 36rpx;
  line-height: 50rpx;
  color: #333333;
  font-weight: 600;
  padding-left: 20rpx;
}
/* 要闻概览 */
.panel_list .msg-content{
  background: #ffffff;
  border-radius: 4rpx;
  padding: 40rpx 30rpx;
  font-size: 30rpx;
}
.panel_list .overview-content .overview-list{
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  padding-top: 30rpx;
}
.panel_list .overview-content .overview-list:first-child{
  padding-top: 0;
}
.panel_list .overview-content .overview-list .list_ite_left{
  padding: 18rpx 30rpx 0 0;
  flex-shrink: 0;
}
.panel_list .overview-content .overview-list .point{
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #007AFF;
}
.panel_list .overview-content .overview-list .list_ite_right{
  line-height: 42rpx;
  color: #333333;
  text-align: justify;
}
.finance-list .item-name-con{
  font-size: 36rpx;
  line-height: 56rpx;
  color: #333333;
  font-weight: 600;
  word-break: break-all;
}
.finance-list .item-about-con{
  font-size: 30rpx;
  line-height: 56rpx;
  color: #333333;
  text-align: justify;
  padding-top: 20rpx;
  word-break: break-all;
}
.finance-list .item-comment-div-out{
  margin-top: 40rpx;
  padding: 40rpx 30rpx;
  border-radius: 4rpx;
  background: #F0F0F0;
  font-size: 28rpx;
  line-height: 44rpx;
  font-weight: 400;
  letter-spacing: 2rpx;
}
.other-list:last-child .con-line{
  display: none;
}
.other-list .con-title{
  font-size: 36rpx;
  line-height: 56rpx;
  color: #333333;
  font-weight: 600;
}
.other-list .con-title image{
  width: 20rpx;
  height: 20rpx;
  margin-right: 24rpx;
}
.other-list .con-body{
  font-size: 30rpx;
  line-height: 56rpx;
  color: #333333;
  text-align: justify;
  word-break: break-all;
  padding-top: 20rpx;
}
.other-list .con-line{
  margin: 50rpx 0;
  border-top: 2rpx solid #eee;
}