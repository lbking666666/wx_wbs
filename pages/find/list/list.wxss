/*列表循环*/

.list-col {
    border-radius: 30rpx;
    background: #fff;
    width: 670rpx;
    height: 595rpx;
    overflow: hidden;
    margin: 30rpx auto;
    box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.2);
}

.list-col .col-img {
    width: 670rpx;
    height: 350rpx;
    overflow: hidden;
}

.list-col .img {
    width: 670rpx;
    height: 350rpx;
}

.list-col .col-con,
.list-col .col-bd {
    padding: 0 30rpx;
    clear: both;
}

.list-col .col-title {
    padding: 25rpx 0;
    line-height: 48rpx;
    overflow: hidden;
    clear: both;
    font-size: 36rpx;
    height: 48rpx;
    text-overflow: ellipsis;
}

.list-col .col-hd {
    padding: 25rpx 30rpx;
    overflow: hidden;
}

.list-col .col-hd .col-title {
    float: left;
    padding: 0;
}

.list-col .col-hd .txt {
    color: #cda87a;
    float: right;
    font-size: 24rpx;
    line-height: 48rpx;
}

.col-text {
    padding-top: 20rpx;
    overflow: hidden;
    line-height: 42rpx;
    text-overflow: ellipsis;
    height: 42rpx;
    color: #888;
    font-size: 28rpx;
}

.col-tag {
    overflow: hidden;
}

.col-tag .tag {
    font-size: 20rpx;
    color: #cda87a;
    background: #f5efe4;
    border-radius: 10rpx;
    height: 30rpx;
    line-height: 30rpx;
    padding: 0rpx 18rpx;
    margin-right: 12rpx;
}

/* 增值服务 */
