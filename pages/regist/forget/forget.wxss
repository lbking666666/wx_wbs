page{
  overflow: hidden;
}
.forget-password .content .form-col{
  overflow: hidden;
  border-bottom:1rpx solid #dbdbdb;
  height: 100rpx;
  width: 690rpx;
  padding: 0 30rpx;
}
.forget-password .content .form-input{
  position: absolute;
  bottom: 0;
  border-bottom:none;
  width: 450rpx;
  height: 100rpx;
  padding-left: 5.5em;
  line-height: 100rpx;
}
.forget-password .content .label{
  position: absolute;
  color: #333;
  font-size: 30rpx;
  line-height: 100rpx;
  bottom: 0;
}
.forget-password .content .form-input-clear{
  right:30rpx;
  bottom:33rpx;
}
.forget-password .form-col .captcha-image{
  position:absolute;
  right:26rpx;
  bottom:15rpx;
  width:176rpx;
  height:69rpx;
  z-index:9;
}
.forget-password .form-col .getcaptcha-btn,
.forget-password .form-col .captcha-seconds{
  font-size: 26rpx;
  color: #c8a063;
  border: 1px solid #c8a063;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  width: 200rpx;
  position: absolute;
  right: 26rpx;
  bottom: 20rpx;
  border-radius: 5rpx;
  z-index: 9;
}

.form-button .fake-btn{
  width:100%;
  height:100rpx;
  color:#fff;
  font-size:30rpx;
  line-height:100rpx;
  background:#dbdbdb;
  border-radius: 0;
}
.form-button .form-btn{
  width:100%;
  height:100rpx;
  color:#fff;
  font-size:30rpx;
  line-height:100rpx;
  background:#eaa848;
  border-radius: 0;
}
.forget-password .confirmBox{
  margin: 100rpx 30rpx 0;
}
.forget-password .confirmBox .fakebtn{
  display: block;
  height: 100rpx;
  width: 690rpx;
  background: #dbdbdb;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 32rpx;
}
.forget-password .confirmBox .confirm-btn{
  display: block;
  height: 100rpx;
  width: 690rpx;
  background: #c8a063;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 32rpx;
}